<Project Sdk="Microsoft.NET.Sdk" InitialTargets="ValidateConfigFile">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>dddns</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Update="config.json" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <Target Name="ValidateConfigFile">
    <Error Text="config.json is missing" Condition="!Exists('config.json')" />
  </Target>

</Project>
